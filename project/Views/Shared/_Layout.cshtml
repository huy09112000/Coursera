    <script type="text/javascript">
        function searchBar(ele) {
            console.log(1, ele.value);
            $('#search_dropdown').empty();
            HTTPGet('/home/search', { key: ele.value }, searchResult)
                .done(function () { })
                .fail(function (jqxhr, setting, ex) { console.log(ex) });
        }
        function searchResult(res) {
            let data = res.data;
            let result = ``;
            for (var i = 0; i < data.length; i++) {
                result += ` <a class="dropdown-item search__dropdown__item" href="/Lesson/Content?Id=${data[i].Id}">Course Grid 2 </a>`;
            }
            $('#search_dropdown').append(result);
        }
