                <li class="item__lesson"><a href="#"><span>Name</span></a></li>
                <li class="item__lesson"><a href="#"><span>Name</span></a></li>
                <li class="item__lesson"><a href="#"><span>Name</span></a></li>
                <li class="item__lesson"><a href="#"><span>Name</span></a></li>
            </ul>
        </div>
    </div>


</div>


@Scripts.Render("~/Assets/admin/quizz/js/util.js")


