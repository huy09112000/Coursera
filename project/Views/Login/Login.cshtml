@model project.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <link href="~/Assets/admin/dist/css/loginCSS.css" rel="stylesheet" />
}
@using (Html.BeginForm("Verify", "Login", FormMethod.Post))
{
    <div class="content">
        <div class="account-in">
            <h2> Account</h2>
            <div class="col-md-7 account-top">
                <form action="login" method="POST">
                    <input type="hidden" name="page" value="login-form">
                    <div>
                        <span> Email:</span>
                        @Html.TextBoxFor(Model => Model.Email, htmlAttributes: new { placeholder = "Email", @class = "form-control" })
                    </div>
                    <div>
                        <span class="pass"> Password:</span>
                        @Html.TextBoxFor(Model => Model.Password, htmlAttributes: new { placeholder = "Password", @class = "form-control" })
                    </div>
                    <input type="submit" value="Login">
                    <a href="https://localhost:44377/Login/ForgotPassword" class="hihi">Forgot Password?</a>
                </form>
            </div>
            <div class="col-md-5 left-account ">
                <a href="https://localhost:44377/Login/Register" class="create"> Create an account</a>
                <div class="clearfix"> </div>
            </div>

            <div class="clearfix"> </div>
        </div>


    </div>
}
