@model project.Models.Subject

@{
    ViewBag.Title = "Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="margin: 20px;font-size:40px">Subjects in this course</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<body>
    <div class="row">
        @foreach (var item in ViewBag.subjects)
        {
            <div class="col-3">
                <div style="width: 300px;height: 360px;border: 1px solid #808080;margin: 50px;box-shadow: 0px 3px 5px 3px #ccc;border-radius: 12px">
                    <div>
                        <img src=@item.Image style="height: 180px;width: 100%;border-radius:12px" />
                    </div>
                    <div style="margin: 10px">
                        <a href="../Lesson/Lesson?CurentSubjectId=@item.Id" style="font-size: 20px">@item.Name</a>
                        <p>@item.Describtion</p>
                    </div>
                    <div style="margin: 10px">
                        @for (int i = 0; i < @item.Rate; i++)
                        {
                            <i class='fas fa-star' style='font-size:20px; color: #FBDA00;'></i>
                        }
                    </div>
                    <div style="margin: 10px">
                        <p>@item.Code</p>
                    </div>
                </div>
            </div>
        }
    </div>
</body>



